<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

    <TextView
            android:id="@+id/textView_chat_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rounded_edittext_register_login"
            android:maxWidth="240dp"
            android:padding="16dp"
            android:text="This is my message that will wrap into multiple lines and keep on going"
            app:layout_constraintEnd_toStartOf="@+id/imageView_chat_to"
            app:layout_constraintTop_toTopOf="@+id/imageView_chat_to" />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_chat_to"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_star_big_on" />

</android.support.constraint.ConstraintLayout>