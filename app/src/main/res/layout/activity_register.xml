<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity" android:background="@android:color/holo_blue_light"
        android:id="@+id/textView_have_account_register">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_username_register"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp" android:hint="Username"
            android:background="@drawable/rounded_edittext_register_login" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/button_select_photo_register"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText_email_register"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="@+id/editText_username_register"
            app:layout_constraintStart_toStartOf="@+id/editText_username_register"
            android:hint="Email" android:background="@drawable/rounded_edittext_register_login"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_username_register"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText_password_register"
            app:layout_constraintTop_toBottomOf="@+id/editText_email_register"
            app:layout_constraintEnd_toEndOf="@+id/editText_email_register"
            android:paddingLeft="16dp"
            android:background="@drawable/rounded_edittext_register_login" android:hint="Password"
            app:layout_constraintStart_toStartOf="@+id/editText_email_register"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <Button
            android:text="Button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_button"
            android:textColor="@android:color/white"
            android:id="@+id/button_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_password_register"
            app:layout_constraintEnd_toEndOf="@+id/editText_password_register"
            app:layout_constraintStart_toStartOf="@+id/editText_password_register" tools:text="Register"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Already have an account?"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_already_have_account" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_register"
            app:layout_constraintEnd_toEndOf="@+id/button_register"
            app:layout_constraintStart_toStartOf="@+id/button_register" app:layout_constraintHorizontal_bias="0.496"/>
    <Button
            android:text="Button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/button_select_photo_register"
            android:background="@drawable/rounded_select_photo_register" android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.497" tools:text="Select photo" android:layout_marginTop="120dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/selectphoto_imageview_register"
            android:layout_height="150dp"
            android:layout_width="150dp"
            app:layout_constraintStart_toStartOf="@+id/button_select_photo_register"
            app:layout_constraintEnd_toEndOf="@+id/button_select_photo_register"
            app:layout_constraintTop_toTopOf="@+id/button_select_photo_register"
            app:layout_constraintBottom_toBottomOf="@+id/button_select_photo_register"
            app:civ_border_width="4dp"/>
</android.support.constraint.ConstraintLayout>